<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - 我的 ASP.NET 應用程式</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/BootStrap5/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/BootStrap5/styles.css" rel="stylesheet" />
</head>
<style>
    .navbar-brand {
        font-size: 3.0rem;
    }
    .navbarLink {
        font-size:1.3rem;
    }
    .dropNavbarLink {
        font-size: 1.1rem;
    }

    @@media only screen and (max-width:992px) {
        #navbarSupportedContent {
            margin-top:0px;
        }
    }

    @@media only screen and (min-width:992px) {
        #navbarSupportedContent {
            margin-top: 80px;
        }
    }
</style>
<body >
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" href="#">Boot5_Design</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation"><span class="navbar-toggler-icon"></span></button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent" style="padd">
                <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                    <li class="nav-item"><a class="nav-link active navbarLink" aria-current="page" href="/Home/">Home</a></li>
                    <li class="nav-item"><a class="nav-link navbarLink" href="/Home/About">About</a></li>
                    <li class="nav-item"><a class="nav-link navbarLink" href="/Home/Contact">Contact</a></li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle navbarLink" id="navbarDropdown" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">Dropdowns</a>
                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                            <li><a class="dropdown-item dropNavbarLink" href="/Home/">Home</a></li>
                            <li><a class="dropdown-item dropNavbarLink" href="/Home/About/">About</a></li>
                            <li><hr class="dropdown-divider" /></li>
                            <li><a class="dropdown-item dropNavbarLink" href="/Home/Contact/">Contact</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="container body-content" style="margin-top: 30px;width:80rem">
        @RenderBody()
        <hr />
        <footer class="bg-dark py-4 mt-auto">
            <div class="container px-5">
                <div class="row align-items-center justify-content-between flex-column flex-sm-row">
                    <div class="col-auto" style="width:100%;text-align:center">
                        <div class="small m-0 text-white">
                            Copyright &copy; Your Website 2022
                        </div>
                    </div>
                </div>
            </div>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    <script src="~/Scripts/BootStrap5/popper.min.js"></script>
    <script src="~/Scripts/BootStrap5/bootstrap.min.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
